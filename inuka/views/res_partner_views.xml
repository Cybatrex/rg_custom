    <record id="view_res_partner_form_inherit_inuka" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.inuka</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="company_type" position="attributes">
                <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            </field>
            <field name="parent_id" position="attributes">
                <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            </field>
            <!--<field name="street" position="attributes">
                <attribute name="attrs">{'required': [('customer', '=', True)]}</attribute>
            </field>
            <field name="city" position="attributes">
                <attribute name="attrs">{'required': [('customer', '=', True)]}</attribute>
            </field>-->
            <!-- <field name="state_id" position="attributes">
                <attribute name="placeholder">Province</attribute>
                <attribute name="attrs">{'required': [('customer', '=', False)]}</attribute>
            </field> -->
            <!--<field name="zip" position="attributes">
                <attribute name="attrs">{'required': [('customer', '=', True)]}</attribute>
            </field>
            <<field name="country_id" position="attributes">
                <attribute name="attrs">{'required': [('customer', '=', True)]}</attribute>
            </field>-->
            <field name="user_id" position="attributes">
                <attribute name="string">Mentor</attribute>
            </field>
            <field name="mobile" position="attributes">
                <attribute name="attrs">{'required': [('customer', '=', True)], 'readonly': [('status', '!=', 'candidate')]}</attribute>
            </field>
            <field name="email" position="attributes">
            	<attribute name="attrs">{'readonly': [('status', '!=', 'candidate')]}</attribute>
            </field>
            <field name="phone" position="attributes">
            	<attribute name="attrs">{'readonly': [('status', '!=', 'candidate')]}</attribute>
            </field>
            <field name="type" position="before">
                <field name="first_name" string="First Name"
                       attrs="{'invisible': [('customer', '=', False)],
                               'readonly': [('status', '!=', 'candidate')],
                               'required': [('customer', '=', True)]}" />
                <field name="last_name"
                       attrs="{'invisible': [('customer', '=', False)],
                               'readonly': [('status', '!=', 'candidate')],
                               'required': [('customer', '=', True)]}"/>
                <field name="passport_no" attrs="{'invisible': [('customer', '=', False)], 'readonly': [('status', '!=', 'candidate')]}"/>
                <field name="join_date" attrs="{'invisible': [('customer', '=', False)], 'readonly': [('status', '!=', 'candidate')], 'required': [('customer', '=', True)]}"/>
                <field name="dob" attrs="{'invisible': [('customer', '=', False)],
                                          'readonly': [('status', '!=', 'candidate')],
                                          'required': [('customer', '!=', False)]}"/><!--,'required': [('customer', '=', True)]-->
                <field name="is_admin" invisible="1"/>
                <field name="available_bal" invisible="1"/>
                <field name="available_fund" invisible="1"/>
            </field>
            <!-- <field name="function" position="before">
                <field name="last_name" attrs="{'invisible': [('customer', '=', False)], 'required': [('customer', '=', True)]}"/>
            </field> -->
            <field name="lang" position="before">
                <field name="home_phone" widget="phone" attrs="{'invisible': [('customer', '=', False)], 'readonly': [('status', '!=', 'candidate')]}"/>
            </field>
            <field name="lang" position="after">
                <field name="upline" domain="[('customer', '=', True), ('id', '!=', id), ('type', '=', 'contact')]" attrs="{'invisible': [('customer', '=', False)], 'readonly': [('status', '!=', 'candidate')], 'required': [('customer', '=', True)]}"/><!--,'required': [('customer', '=', True)]-->
                <field name="upline_id" attrs="{'invisible': [('customer', '=', False)], 'readonly': [('status', '!=', 'candidate')], 'required': [('customer', '=', True)]}"/>

<!--                <field name="kit" 
                       attrs="{'invisible': ['|', ('customer', '=', False), ('status', 'not in', ('candidate'))], 'required': [('customer', '=', True), ('status', 'in', ('candidate'))]}"/>
                 <field name="status"/> -->
                <field name="kit"
                       attrs="{'invisible': ['|', ('customer', '=', False), ('status', 'not in', ('candidate'))], 'required': [('customer', '=', True), ('status', 'in', ('candidate'))]}"/>
            </field>
            <field name="vat" position="replace"/>
            <field name="function" position="replace"/>
            <field name="website" position="replace"/>
            <field name="ref" position="replace">
            </field>
            <field name="street" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent_id', '!=', False), ('type', '=', 'contact'),('status', '!=', 'candidate')]}</attribute>
            </field>
            <field name="street2" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent_id', '!=', False), ('type', '=', 'contact'),('status', '!=', 'candidate')]}</attribute>
            </field>
            <field name="city" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent_id', '!=', False), ('type', '=', 'contact'),('status', '!=', 'candidate')]}</attribute>
            </field>
            <field name="state_id" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent_id', '!=', False), ('type', '=', 'contact'),('status', '!=', 'candidate')], 'required': [('customer', '=', True)]}</attribute>
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True, 'no_create': True}</attribute>
                <attribute name="placeholder">Province</attribute>
            </field>
            <!-- <field name="state_id" position="replace">
                <field name="state_id" placeholder="Province" readonly="0"
                       attrs="{'required': [('customer', '=', True)]}"
                       options="{'no_quick_create':True,'no_create_edit':True, 'no_create': True}"/>
            </field> -->
            <field name="zip" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent_id', '!=', False), ('type', '=', 'contact'),('status', '!=', 'candidate')]}</attribute>
            </field>
            <field name="country_id" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent_id', '!=', False), ('type', '=', 'contact'),('status', '!=', 'candidate')]}</attribute>
            </field>
        </field>
    </record>

